\end_layout

\begin_layout Plain Layout

}   
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

void myextension_finalize(void) {
\end_layout

\begin_layout Plain Layout

} 
\end_layout

\end_inset


\end_layout

