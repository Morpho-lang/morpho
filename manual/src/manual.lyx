\begin_inset listings
inline false
status open

\begin_layout Plain Layout

var problem = OptimizationProblem(m)
\end_layout

\begin_layout Plain Layout

var la = Area()
\end_layout

\begin_layout Plain Layout

problem.addenergy(la)
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

var lv = VolumeEnclosed()
\end_layout

\begin_layout Plain Layout

problem.addconstraint(lv)
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

var opt = ShapeOptimizer(problem, m)
\end_layout

