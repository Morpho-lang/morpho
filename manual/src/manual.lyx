\end_layout

\begin_layout Plain Layout

var Nsteps = 1000 // Maximum number of steps per refinement level
\end_layout

\begin_layout Plain Layout

\end_layout

\begin_layout Plain Layout

for (i in 1..Nlevels) {
\end_layout

\begin_layout Plain Layout

